<div class="container">
  <div class="row">
    <div class="col-lg-3 mt-3">
      <%= render 'users/user', book: @book, user: @user %>
    </div>
    <div class="col-lg-7 offset-lg-1 mt-3">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show',user_path(user.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>

</div>

