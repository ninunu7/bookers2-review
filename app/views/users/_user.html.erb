<h2>User Info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
      </tr>
    </tbody>
  </table>
<%= link_to '' , edit_user_path(user.id), class: "fas fa-user-cog btn btn-outline-secondary mx-auto d-block btn-sm" %>

<h2 class="mt-3">New Book</h2>
<%= form_with model:book, local:true do |f| %>
  <div class="mt-1 mb-1">Title</div>
    <%=f.text_field :title, :size=>"30" %>
  <div class="mt-3 mb-1">Opinion</div>
    <%= f.text_area :body, :size=>"30x4" %>
    <div class="mt-2"><%= f.submit 'Create Book',class: 'btn btn-success' %></div>
<% end %>
