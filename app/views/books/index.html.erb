<div class="container">
  <div class="row">



    <div class="col-lg-3 mt-3">
      <h2>User Info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <td>name</td>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <td>introduction</td>
              <td><%= current_user.introduction %></td>
            </tr>
          </tbody>
        </table>
      <%= link_to '' , edit_user_path(@user.id), class: "fas fa-user-cog btn btn-outline-secondary mx-auto d-block btn-sm" %>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <h4>Title</h4>
          <%=f.text_field :title, :size=>"30" %>
        <h4>Opinion</h4>
          <%= f.text_area :body, :size=>"30x5" %>
          <div class="mt-2"><%= f.submit 'create book',class: 'btn btn-success' %></div>
      <% end %>
    </div>



    <div class="col-lg-7 offset-lg-1 mt-3">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= link_to attachment_image_tag(book.user,:profile_image, :fill, 50, 50, fallback: "no_image.jpg"),user_path(book.user) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>

