<div class="container">
  <div class="row mt-3">
    <div class="col-lg-6 offset-lg-3">
      <h1>Editing Book</h1>
        <%= form_with model:@book, local:true do |f| %>
        <div class="mt-3 mb-2">Title</div>
          <%= f.text_field :title, :size=>"50" %>
          <div class="mt-3 mb-2">Opinion</div>
          <%= f.text_area :body, :size=> "50x5" %>
          <div class="mt-3"><%= f.submit 'Update Book', class: 'btn btn-success' %></div>
        <% end %>
        <%=link_to "Show", book_path(@book.id) %>
        <%#= link_to "Back",
    </div>
  </div>
</div>