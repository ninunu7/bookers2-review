<div class="container">
  <div class="row">
    <div class="col-lg-3 mt-3">
      <%= render 'users/user', user: @user ,book: @book  %>
    </div>
    <div class="col-lg-7 offset-lg-1 mt-3">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"),user_path(@user.id) %><br>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td><%= link_to @book.title,book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@user.id), class: 'btn btn-sm btn-success' %></td>
              <td><%= link_to "Destroy",book_path(@book),method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: '本当に削除しますか？'} %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
