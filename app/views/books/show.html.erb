<h1>Books detail</h1>
<table>
  <tbody>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
      <td><%= @user.name %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @user.id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@user.id), class: 'btn btn-success' %></td>
      <td><%= link_to "Destroy",book_path(@book),method: :delete, class: 'btn btn-danger', data: {confirm: '本当に削除しますか？'} %></td>
      <% end %>
    </tr>
  </tbody>
</table>
