<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td><%= link_to attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"),user_path(@user.id) %></td>
      <td><%= link_to @user.name, user_path(@user.id) %></td>
      <td><%= link_to @book.title,book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if @user.id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@user.id), class: 'btn btn-success' %></td>
      <td><%= link_to "Destroy",book_path(@book),method: :delete, class: 'btn btn-danger', data: {confirm: '本当に削除しますか？'} %></td>
      <% end %>
    </tr>
  </tbody>
</table>
